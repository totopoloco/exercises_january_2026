# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 4

[*.{gradle,groovy}]
indent_size = 4

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.properties]
indent_size = 4

[*.xml]
indent_size = 4

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2

[{Dockerfile,Dockerfile.*}]
indent_size = 4

